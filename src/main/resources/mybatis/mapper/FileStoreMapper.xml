<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moyu.moyunetdisk.mapper.FileStoreMapper">

    <resultMap type="com.moyu.moyunetdisk.entity.FileStore" id="FileStoreMap">
        <result property="fileStoreId" column="file_store_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="currentSize" column="current_size" jdbcType="INTEGER"/>
        <result property="maxSize" column="max_size" jdbcType="INTEGER"/>
        <result property="permission" column="permission" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="commonsKey">
        file_store_id,user_id,current_size,max_size,permission
    </sql>

    <insert id="addFileStore" useGeneratedKeys="true" keyProperty="fileStoreId">
        insert into t_file_store(user_id) values (#{userId})
    </insert>

    <select id="getFileStoreByUserId" resultType="com.moyu.moyunetdisk.entity.FileStore">
        select <include refid="commonsKey"/> from t_file_store
        <where>
            user_id = #{userId}
        </where>
    </select>
    <select id="getFileStoreById" resultType="com.moyu.moyunetdisk.entity.FileStore">
        select <include refid="commonsKey"/> from t_file_store
        <where>
            file_store_id = #{fileStoreId}
        </where>
    </select>
    <update id="addSize">
        update t_file_store set current_size = current_size + #{size} where file_store_id = #{id}
    </update>
    <update id="subSize">
        update t_file_store set current_size = current_size - #{size} where file_store_id = #{id}
    </update>
    <update id="updatePermission">
        update t_file_store set permission = #{permission},max_size = #{size} where user_id = #{id}
    </update>
    <delete id="deleteById">
        delete from t_file_store where file_store_id = #{id}
    </delete>
</mapper>

